@startuml Blackjack

class Main {
}

class Game {
  -Deck deck
  -Player player
  -Dealer dealer
  +__construct()
  +getDeck()
  +getPlayer()
  +getDealer()
  +start()
  -displayStartMessage()
  -displayInputErrorMessage()
  -displayLoseByBurstMessage()
  -displayWinByBurstMessage()
  -displayProgressMessage()
  -displayStandMessage()
  -displayCardsDrawnByDealer()
  -displayResultMessage()

}

class Player {
  -INIT_NUM_OF_CARDS_IN_HAND
  -array hand
  -int scoreTotal
  -int countAce
  -string status
  +__construct()
  +getHand()
  +getScoreTotal()
  +getCountAce()
  +getStatus()
  +initHand()
  +drawACard()
  -calcScoreTotal()
  -calcAceScore()
  +changeStatus()
}

class Dealer {
  +checkBurst()
  +judgeWinOrLose()
  +drawAfterAllPlayerStand()
}

class Deck {
  -array deck
  +__construct()
  +getDeck()
  +initDeck()
  +takeACard()
}

class Card {
  -CARD_SCORE
  -array suits
  +createNewDeck()
}

Main -- Game
Game -- Deck
Game -- Player
Deck -- Card

Player <|-- Dealer

@enduml
